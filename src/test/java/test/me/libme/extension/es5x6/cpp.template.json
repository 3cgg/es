{
  "template": "cpp-*-index",
  "settings": {
    "number_of_shards": 1,
    "index.mapper.dynamic": false
  },
  "mappings": {
    "_default_": {
      "_source": {
        "enabled": true
      },
      "date_detection": false,
      "numeric_detection": false,
      "properties": {
        "cppEventSource": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 512
            }
          }
        },
        "saasCode": {
          "type": "keyword"
        },
        "@timestamp" : {
          "type" : "date"
        },
        "@version" : {
          "type" : "long"
        }

      }
    }
  }
}